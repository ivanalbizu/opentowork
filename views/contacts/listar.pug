extends ../base

block content

  // header
  include ../includes/header.pug
  link(rel='stylesheet' href='https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css')
  script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
  script(src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script.
    $(document).ready(function() {
      /*
      var groupColumn = 1;
      var tableName = 'example';

      var table = $('#'+tableName).dataTable({
      });
      */
    });
  // aside menu
  include ../includes/aside-sidenav.pug
  main.main.transporter-page
    h2.title-page Tus contactos

    .contacts
      table#contacts.display.compact(style='width:100%')
        thead
          tr
            th Email
            th Nombre
            th Apellidos
        tfoot
          tr
            th Email
            th Nombre
            th Apellidos
    .main__cards
      .card
        .card__header
          .card__header-title.text-light
            | Crear 
            strong nuevo Contacto 
        .card__main
          form.form.form-contact
            .input-field.host
              label.label(for='email') 
                span Email
                input(type='text' id='email' name='email' value='yourmail@yahoo.com')
            .input-field.port
              label.label(for='name')
                span Nombre
                input(type='text' id='name' name='name' value='Claudia')
            .input-field.service
              label.label(for='surname')
                span Apellidos
                input(type='text' id='surname' name='surname' value='Santos')
            .input-field.button
              button.btn(type='submit') Crear nuevo

  // footer
  include ../includes/footer.pug
