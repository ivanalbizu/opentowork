extends ../base

block content

  // header
  include ../includes/header.pug
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/grapesjs/0.16.41/css/grapes.min.css')
  script(src="https://cdnjs.cloudflare.com/ajax/libs/grapesjs/0.16.41/grapes.min.js")
  script(src='https://unpkg.com/grapesjs-mjml@0.1.15/dist/grapesjs-mjml.min.js')
  script(src='https://cdn.jsdelivr.net/npm/grapesjs-indexeddb@0.1.1/dist/grapesjs-indexeddb.min.js')

  // aside menu
  include ../includes/aside-sidenav.pug
  main.main
    .main__cards
      .card
        .card__header
          .card__header-title.text-light Templates 
        .card__main
          ul#html-templates.html-templates
      .card
        .card__header
          .card__header-title.text-light Crear Template 
        .card__main
          form.form
            .input-field
              label.label(for='name') 
                span Nombre
                input(type='text' id='name' name='name' autocomplete='off')
            .input-field.button
              button.btn(type='submit') Crear template

  // footer
  include ../includes/footer.pug
